pipeline {
    agent any

    environment {
        PATH = "/opt/cabal/bin:/opt/ghc/bin:$PATH"
    }

    stages {
        stage('build') {
            steps {
                sh 'cabal v2-build'
                sh 'cabal v2-test --test-options=--xml=test-report.xml'
            }
        }
    }

    post {
        always {
            junit 'test-report.xml'
        }
    }
}

