pipeline {
    agent any

    environment {
        PATH = "/opt/cabal/bin:/opt/ghc/bin:$PATH"
    }

    stages {
        stage('configure') {
            steps {
                sh '''
                    cabal v2-configure --jobs='$ncpus' --enable-tests --flags=+fatal-warnings --test-options=--xml=test-report.xml
                '''
            }
        }

        stage('build') {
            steps {
                sh "cabal v2-build"
            }
        }

        stage('aux') {
            parallel {
                stage('test') {
                    steps {
                        sh "cabal v2-test"
                    }
                }
                stage('docs') {
                    steps {
                        sh "./scripts/documentation-coverage"
                    }
                }
            }
        }
    }

    post {
        success {
            archiveArtifacts 'dist-newstyle/build/*/ghc-*/prosidy-*/doc/html/prosidy/**'
        }
        always {
            junit 'test-report.xml'
            deleteDir()
        }
    }
}

