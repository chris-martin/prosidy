#!/bin/sh
set -eu
cd "$(git rev-parse --show-toplevel)"
nix build --file nix --out-link .ghc ghc

GHC_PACKAGE_PATH="$(realpath "$(find .ghc/lib -type d -name package.conf.d)")/"

cat <<EOF > "$HIE_BIOS_OUTPUT"
-clear-package-db
-package-db=$GHC_PACKAGE_PATH
-isrc
-ibuild
-Wall
-Wno-name-shadowing
EOF