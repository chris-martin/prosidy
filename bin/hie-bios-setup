#!/bin/bash
set -eu
cd "$(git rev-parse --show-toplevel)"
HIE_BIOS_OUTPUT="${HIE_BIOS_OUTPUT:-/dev/fd/1}"
./bin/mkenv

function write
{
    cat >> "$HIE_BIOS_OUTPUT"
}

if [ -L .env ] 2>&1
then
    write <<EOF
-clear-package-db
-package-db="$(realpath "$(find .env/lib -type d -name package.conf.d)")/"
EOF
else
    version="$(ghc --numeric-version)"
    write <<EOF
-package-db
$HOME/.cabal/store/ghc-${version}/package.db
EOF
fi

write <<EOF 
-Wall
-Wno-name-shadowing
-i
-ibuild
-itest
EOF

for path in src/*
do
    echo "-i${path}" >> "$HIE_BIOS_OUTPUT"
done
